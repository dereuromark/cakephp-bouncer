{
    "name": "dereuromark/cakephp-bouncer",
    "description": "CakePHP plugin for approval workflow - users propose changes, admins approve or reject before publishing",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "plugin",
        "approval",
        "workflow",
        "moderation",
        "draft",
        "bouncer"
    ],
    "homepage": "https://github.com/dereuromark/cakephp-bouncer",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Scherer",
            "role": "Author",
            "homepage": "https://www.dereuromark.de"
        }
    ],
    "require": {
        "php": ">=8.2",
        "cakephp/orm": "^5.0.0",
        "ext-json": "*"
    },
    "require-dev": {
        "cakephp/cakephp": "^5.1.0",
        "phpunit/phpunit": "^11.5.42 || ^12.4.0",
        "php-collective/code-sniffer": "dev-master as 0.4.6",
        "cakephp/migrations": "^4.0.0"
    },
    "suggest": {
        "dereuromark/cakephp-audit-stash": "Integrates seamlessly to provide complete audit trail of approval workflow"
    },
    "autoload": {
        "psr-4": {
            "Bouncer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bouncer\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/",
            "TestApp\\": "tests/test_app/src/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs --colors --parallel=16 -p",
        "cs-fix": "phpcbf --colors --parallel=16 -p",
        "phpstan": "tools/phpstan analyse",
        "stan": [
            "@phpstan"
        ],
        "phpstan-baseline": "tools/phpstan --generate-baseline",
        "stan-setup": "phive install",
        "test": "phpunit",
        "coverage-test": "phpunit --stderr --coverage-clover=clover.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
